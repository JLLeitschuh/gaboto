<?xml version="1.0"?>
<!DOCTYPE rdf:RDF [
     <!ENTITY rdf "http://www.w3.org/1999/02/22-rf-syntax-ns#" >
     <!ENTITY rdfs "http://www.w3.org/2000/01/rdf-schema#" >
     <!ENTITY xsd "http://www.w3.org/2001/XMLSchema" >
     <!ENTITY owl "http://www.w3.org/2002/07/owl#" >
   ]>
<rdf:RDF
    xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
    xmlns:rdfs="http://www.w3.org/2000/01/rdf-schema#"
    xmlns:xsd="http://www.w3.org/2001/XMLSchema"
    xmlns:owl = "http://www.w3.org/2002/07/owl#"
    xml:base = "http://ns.ox.ac.uk/namespace/oxpoints/2009/02/owl#">
    
    <!-- Describe the oxpoints ontology -->
    <owl:Ontology rdf:about="">
        <owl:versionInfo>0.1</owl:versionInfo>
    </owl:Ontology>
    
    
    <owl:Class rdf:ID="OxpEntity"/>
    
    <!-- 
        Build class hierarchy for places
        -->
    <owl:Class rdf:ID="Place">
      <rdfs:subClassOf rdf:resource="#OxpEntity"/>
    </owl:Class>
    
    <owl:Class rdf:ID="Building">
        <rdfs:subClassOf rdf:resource="#Place"/>
    </owl:Class>

    <owl:Class rdf:ID="Room">
        <!-- a room is a place -->
        <rdfs:subClassOf rdf:resource="#Place"/>
        <!-- parent has to be a building -->
        <rdfs:subClassOf>
            <owl:Restriction>
                <owl:onProperty rdf:resource="#physicallyContainedWithin"/>
                <owl:allValuesFrom rdf:resource="#Building"/>
            </owl:Restriction>
        </rdfs:subClassOf>
        <!-- we are in exactly one building -->
        <rdfs:subClassOf>
            <owl:Restriction>
                <owl:onProperty rdf:resource="#physicallyContainedWithin"/>
                <owl:cardinality rdf:datatype="&xsd;nonNegativeInteger">1</owl:cardinality>
            </owl:Restriction>
        </rdfs:subClassOf>
    </owl:Class>
    
    <owl:Class rdf:ID="Entrance">
        <!-- open space is a place -->
        <rdfs:subClassOf rdf:resource="#Place"/>
    </owl:Class>
    
    <owl:Class rdf:ID="Site">
        <!-- open space is a place -->
        <rdfs:subClassOf rdf:resource="#Place"/>
    </owl:Class>
    
    <owl:Class rdf:ID="Carpark">
        <!-- open space is a place -->
        <rdfs:subClassOf rdf:resource="#Place"/>
    </owl:Class>
    
    <owl:Class rdf:ID="DrainCover">
        <!-- open space is a place -->
        <rdfs:subClassOf rdf:resource="#Place"/>
    </owl:Class>
    
    <owl:Class rdf:ID="WAP">
        <!-- open space is a place -->
        <rdfs:subClassOf rdf:resource="#Place"/>
    </owl:Class>
    
    <!-- 
        Properties for places..
        Dublin Core metadata like dc:title should be used when possible.
    -->
    
    <owl:ObjectProperty rdf:ID="hasLocation">
      <rdfs:comment>Describes that an entity has a specific location</rdfs:comment>
    </owl:ObjectProperty>
    


    <owl:ObjectProperty rdf:ID="physicallyContainedWithin">
      <rdfs:comment>Describes that a place is physically located within another place</rdfs:comment>
      <rdfs:range rdf:resource="#Place"/>
      <rdfs:domain rdf:resource="#Place"/>
    </owl:ObjectProperty>
    
    
    <!-- 
        Build class hierarchy for units
    -->
    <owl:Class rdf:ID="Unit">
      <rdfs:subClassOf rdf:resource="#OxpEntity"/>
    </owl:Class>

    
    <owl:Class rdf:ID="College">
        <!-- a college is a unit -->
        <rdfs:subClassOf rdf:resource="#Unit"/>
    </owl:Class>
    
    <owl:Class rdf:ID="Division">
        <!-- a college is a unit -->
        <rdfs:subClassOf rdf:resource="#Unit"/>
    </owl:Class>
    
    <owl:Class rdf:ID="Faculty">
        <!-- a college is a unit -->
        <rdfs:subClassOf rdf:resource="#Unit"/>
    </owl:Class>
    
    <owl:Class rdf:ID="Department">
        <!-- a department is a unit -->
        <rdfs:subClassOf rdf:resource="#Unit"/>
    </owl:Class>
    
    <owl:Class rdf:ID="ServiceDepartment">
      <rdfs:subClassOf rdf:resource="#Unit"/>
    </owl:Class>
    
    <owl:Class rdf:ID="Museum">
      <rdfs:comment>Describes any kind of museum.</rdfs:comment>
      <rdfs:subClassOf rdf:resource="#Unit"/>
    </owl:Class>

    <owl:Class rdf:ID="Library">
      <rdfs:comment>Describes any kind of library.</rdfs:comment>
      <rdfs:subClassOf rdf:resource="#Unit"/>
    </owl:Class>

        
    <owl:Class rdf:ID="Group">
        <!-- a group is a unit -->
        <rdfs:subClassOf rdf:resource="#Unit"/>
    </owl:Class>
    
    
    <!-- 
        Properties for Units..
        Dublin Core metadata like dc:title should be used when possible.
    -->
    <owl:ObjectProperty rdf:ID="hasPrimaryPlace">
      <rdfs:comment>Defines the primary place for an entity</rdfs:comment>
      <rdfs:domain rdf:resource="#Unit"/>
      <rdfs:range rdf:resource="#Place"/>
    </owl:ObjectProperty>
    
    <owl:ObjectProperty rdf:ID="occupies">
      <rdfs:comment>Describes that a unit occupies a place</rdfs:comment>
      <rdfs:domain>#Unit</rdfs:domain>
      <rdfs:range>#Place</rdfs:range>
    </owl:ObjectProperty>
                    
    <owl:ObjectProperty rdf:ID="uses"/>
    

    
    
    <!--
       Other entities.
    -->
    <owl:Class rdf:ID="Website">
      <rdfs:subClassOf rdf:resource="#OxpEntity"/>
    </owl:Class>

    
    <owl:Class rdf:ID="Image">
      <rdfs:subClassOf rdf:resource="#OxpEntity"/>
    </owl:Class>
    
    <!--
      General properties
     -->
    <owl:ObjectProperty rdf:ID="hasHomepage">
      <rdfs:comment>Describes that an entity has a homepage</rdfs:comment>
    </owl:ObjectProperty>
    
    <owl:ObjectProperty rdf:ID="hasITHomepage">
      <rdfs:comment>Describes that an entity has a homepage for its it people</rdfs:comment>
    </owl:ObjectProperty>
    
    <owl:ObjectProperty rdf:ID="hasLibraryHomepage">
      <rdfs:comment>Library Homepage</rdfs:comment>
    </owl:ObjectProperty>
    
    <owl:ObjectProperty rdf:ID="hasWeblearn">
      <rdfs:comment>Describes that an entity has a weblearn</rdfs:comment>
    </owl:ObjectProperty>

    <owl:ObjectProperty rdf:ID="subsetOf">
      <rdfs:comment>Defines that an entity is a subset of another entity (1:N)</rdfs:comment>
    </owl:ObjectProperty>

    <owl:ObjectProperty rdf:ID="associatedWith">
      <rdfs:comment>Defines that two entities are associated with one another (N:M)</rdfs:comment>
    </owl:ObjectProperty>
    
    <owl:ObjectProperty rdf:ID="capacity">
      <rdfs:comment>Can for example be used to describe the capacity of carparks</rdfs:comment>
    </owl:ObjectProperty>
    
    
    <owl:ObjectProperty rdf:ID="hasWidth">
      <rdfs:comment>Describe the width of an image</rdfs:comment>
      <rdfs:domain>#Image</rdfs:domain>
    </owl:ObjectProperty>

    <owl:ObjectProperty rdf:ID="hasHeight">
      <rdfs:comment>Describe the width of an image</rdfs:comment>
      <rdfs:domain>#Image</rdfs:domain>
    </owl:ObjectProperty>
    
    <owl:ObjectProperty rdf:ID="inImage">
      <rdfs:comment></rdfs:comment>
    </owl:ObjectProperty>
    
    <owl:ObjectProperty rdf:ID="hasOUCSCode">
      <rdfs:comment>The naming scheme for entities introduced by OUCS</rdfs:comment>
    </owl:ObjectProperty>
    
    <owl:ObjectProperty rdf:ID="hasOLISCode">
      <rdfs:comment>The naming scheme for entities introduced by OLIS</rdfs:comment>
    </owl:ObjectProperty>

    <owl:ObjectProperty rdf:ID="hasOBNCode">
      <rdfs:comment>The naming scheme for entities introduced by Estates</rdfs:comment>
    </owl:ObjectProperty>

            
</rdf:RDF>